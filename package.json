{
  "name": "grunt-assetser",
  "description": "Inserting the contents of external CSS and JavaScript files directly into the HTML document",
  "version": "1.0.0",
  "author": {
    "name": "Denis Malinochkin",
    "url": "http://canonium.com"
  },
  "repository": "mrmlnc/grunt-assetser",
  "licenses": "MIT",
  "engines": {
    "node": ">= 0.10.0"
  },
  "scripts": {
    "test": "xo --ignore=Gruntfile.js && rimraf tmp && grunt assetser && ava test/test.js"
  },
  "dependencies": {
    "detect-indent": "^4.0.0",
    "jsmin2": "^1.1.7",
    "promise": "^7.0.4"
  },
  "devDependencies": {
    "ava": "^0.3.0",
    "grunt": "~0.4.5",
    "rimraf": "^2.4.3",
    "xo": "^0.10.1"
  },
  "peerDependencies": {
    "grunt": "~0.4.5"
  },
  "keywords": [
    "gruntplugin",
    "inject",
    "inline",
    "assets",
    "stylesheets",
    "styles",
    "scripts",
    "css",
    "js",
    "html"
  ],
  "files": [
    "tasks"
  ],
  "xo": {
    "space": true,
    "rules": {
      "object-curly-spacing": [
        2,
        "always"
      ],
      "space-before-function-paren": 0
    },
    "envs": [
      "node"
    ]
  }
}
